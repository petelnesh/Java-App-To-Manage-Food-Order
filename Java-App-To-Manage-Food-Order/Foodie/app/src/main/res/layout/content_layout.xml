<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#99c3bdbd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:title="@string/app_name"
            app:titleTextColor="#000"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:text="@string/my_order"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_order"
                        android:layout_alignParentRight="true"
                        android:text="Edit Order"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:onClick="editOrder"/>

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
    android:id="@+id/my_order_recycler_view"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="400dp">
</android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/noorders"
        android:visibility="gone"
        android:layout_gravity="center_horizontal|center_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/tv_total_amount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_ksh_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_total_amount_label"
                android:text="Ksh."
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_total_amount_label"
                android:text="100"
                android:textSize="13sp"
                android:layout_toRightOf="@id/tv_ksh_label"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_ordered_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ordered Meals"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/ordered_meals"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/ordered_meals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="11"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_below="@+id/tv_ordered_label"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place order"
        android:onClick="Placeorder"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="5dp"/>
</LinearLayout>