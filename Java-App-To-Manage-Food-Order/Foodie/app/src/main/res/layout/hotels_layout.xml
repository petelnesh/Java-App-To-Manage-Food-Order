<?xml version="1.0" encoding="UTF-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="10dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:visibility="gone"
            android:id="@+id/hotelid"/>
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/hotel_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="315dp"
            android:layout_height="20dp"
            android:paddingLeft="16dp"
            android:background="#80000000"
            tools:text="Hotel name"
            android:layout_above="@+id/hotel_location"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/hotel_location"
            android:layout_width="315dp"
            android:layout_height="15sp"
            android:layout_alignBottom="@+id/hotel_image"
            android:paddingLeft="16dp"
            android:background="#80000000"
            tools:text="location"
            android:textSize="12dp"
            android:gravity="top"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80000000"/>
        <TextView
            android:id="@+id/hotel_review"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/hotel_image"
            android:paddingRight="16dp"
            android:background="#80000000"
            tools:text="Reviews"
            android:gravity="right|center"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hotel_delivery_time"
            android:text="Delivers in "
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:background="#80000000"
            android:layout_below="@id/hotel_review"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

